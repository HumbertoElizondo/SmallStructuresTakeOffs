@model SmallStructuresTakeOffs.Models.SD630Headwall

@{
    ViewData["Title"] = @Model.GetType().Name + " Details";
}
<h4>Project: @ViewBag.ProjectName</h4>

<p> The HW Code is: @Model.HWcode</p>
<hr />
<dl class="row">
    <dt class="col text-right" style="display:inline">Pour Base (cy):</dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().PourBase().ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">Pour Wall (cy):</dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().PourWall().ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">Pour Total (cy):</dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().PourTotal().ToString("0.00")</dd>
</dl>
<dl class="row">
    <dt class="col text-right" style="display:inline">Form Fabrication (sf):</dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().FormFab().ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">Form Base (sf):</dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().FormBase().ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">Form Wall (sf):</dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().FormWall().ToString("0.00")</dd>
</dl>

<hr />

<dl class="row">
    <dt class="col text-right" style="display:inline">ID:</dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_I_D.ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">A: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_A.ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">B: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_B.ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">C: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_C.ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">D: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_E.ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">E: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_E.ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">F: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_F.ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">G: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_G.ToString("0.00")</dd>
    @*<dt class="col text-right" style="display:inline">H:</dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_H.ToString("0.00")</dd>*@
    @*<dt class="col text-right" style="display:inline">X: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().SD630_X.ToString("0.00")</dd>*@
    

</dl>
<dl class="row">
    <dt class="col text-right" style="display:inline">Pipe Runs: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().PipeNo.ToString()</dd>
    @*<dt class="col text-right" style="display:inline">Skew: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().Skews.ToString()</dd>*@
    @*<dt class="col text-right" style="display:inline">Slope: </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().Slopes.ToString()</dd>*@
    <dt class="col text-right" style="display:inline">Conc (cy): </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().ConcrCY.ToString("0.00")</dd>
    <dt class="col text-right" style="display:inline">Reinf (lb) </dt>
    <dd class="col" style="display:inline">@Model.GetTheHW().ReinfLB.ToString("0.00")</dd>
</dl>

<table class="table">
    <thead>
        <bold>Headwall Reinforcement</bold>
        <tr>
            <th>RebarCode</th>
            <th>Nom</th>
            <th>Shape</th>
            <th class="text-right">Length</th>
            <th class="text-right">Quantity</th>
            <th class="text-right">Total (ft)</th>
            <th class="text-right">Total (lb)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model.HWreinforcements)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => l.HWreinfCode)</td>
                <td>@Html.DisplayFor(modelItem => l.HWRebarNom)</td>
                <td>@Html.DisplayFor(modelItem => l.HWreinfShape)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => l.HWreinfLength)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => l.HWreinfQty)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => l.HWTotalLength)</td>
                <td class="text-right">@Html.DisplayFor(modelItem => l.HWTotalWeight)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class="text-right" colspan="6">
                @Model.HWreinforcements.Select(s => s.HWTotalLength).Sum().ToString("0.00")
            </td>

            <td class="text-right">
                @Model.HWreinforcements.Select(s => s.HWTotalWeight).Sum().ToString("0.00")
            </td>
        </tr>
    </tfoot>
</table>

<div>
    <hr />
    @* <a asp-action="Edit" asp-route-id="@Model.ResVMId">Edit</a> | *@
    <a asp-action="Index" asp-route-id="@ViewBag.HWProjId">Back to List</a>
</div>
