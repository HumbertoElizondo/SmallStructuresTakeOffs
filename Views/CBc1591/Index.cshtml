@model IEnumerable<SmallStructuresTakeOffs.Models.CBc1591>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-id=@ViewBag.ProjectId>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CBCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.CBHeight)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.CBCurbType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CBSlottedDrain)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CBCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.CBHeight)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.CBCurbType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CBSlottedDrain)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CatchBasinId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CatchBasinId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CatchBasinId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Total Catch Basins: @Model.Select(s => s.CBCode).Count().ToString()</td>
            <td class="text-right" colspan="2">Total of Heights: @Model.Select(s => s.CBHeight).Sum().ToString("0.00")</td>

        </tr>
    </tfoot>

</table>

<div>
    <a asp-action="Results" asp-route-id=@ViewBag.ProjectId>Results</a> |
    <a asp-action="Index" asp-controller="CatchBasins" asp-route-id="@ViewBag.ProjectId">To All Catch Basins</a>
</div>


