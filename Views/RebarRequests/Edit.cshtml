@model SmallStructuresTakeOffs.RebarRequest

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RebarRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="RebarRequestId" />
            <input asp-for="RebReqProjId" type="hidden" value="@Model.RebReqProjId" />
            <input asp-for="Structure" type="hidden" value="@Model.Structure" />

            <div class="form-group">
                <label asp-for="RebarRequestNomination" class="control-label"></label>
                <select asp-for="RebarRequestNomination" class="form-control" asp-items="@ViewBag.RebNomination"></select>
                @*<span asp-validation-for="RebarRequestNomination" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="RebarRequestQty" class="control-label"></label>
                <input asp-for="RebarRequestQty" class="form-control" />
                <span asp-validation-for="RebarRequestQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RebarRequestLength" class="control-label"></label>
                <input asp-for="RebarRequestLength" class="form-control" />
                <span asp-validation-for="RebarRequestLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RebReqDescription" class="control-label"></label>
                <input asp-for="RebReqDescription" class="form-control" />
                <span asp-validation-for="RebReqDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.RebReqProjId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
